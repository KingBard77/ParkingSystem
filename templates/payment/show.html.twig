{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}

	<section id="contact" class="contact">
		<div class="container" data-aos="fade-up">

			<div class="section-header">
				<h2>Payment</h2>
				<p>Payment Show</p>
			</div>

            <div class="row gx-lg-0 gy-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ app.request.get('index') ?: parking_spot.id }}</td>
                            </tr>
                            <tr>
                                <th>Owner</th>
                                <td>{{ payment.owner }}</td>
                            </tr>
                            <tr>
                                <th>Vehicle</th>
                                <td>{{ payment.vehicle }}</td>
                            </tr>
                            <tr>
                                <th>Payment Method</th>
                                <td>{{ payment.paymentMethod }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ payment.status }}</td>
                            </tr>
                            <tr>
                                <th>Month Year</th>
                                <td>{{ payment.monthYear }}</td>
                            </tr>
                            <tr>
                                <th>Amount</th>
                                <td>Rm {{ payment.amount }}</td>
                            </tr>
                            {# <tr>
                                <th>Rate</th>
                                <td id="rateParkingSpot">{{ payment.rateParkingSpot }}</td>
                            </tr> #}
                            <tr>
                                <th>Payment Date</th>
                                <td>{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
			</div>

            <!-- Form Group for Buttons -->
            <div class="form-group row">
                <div class="col-md-12 d-flex">
                    <div class="ms-auto">
                        <a href="{{ path('app_payment_index') }}" class="btn btn-secondary me-2">Back to List</a>
                        <a href="{{ path('app_payment_edit', {'id': payment.id}) }}" class="btn btn-primary me-2">Edit</a>
                        <div class="d-inline-block ">
                            {{ include('payment/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# {{ include('payment/_delete_form.html.twig') }} #}

{% endblock %}

