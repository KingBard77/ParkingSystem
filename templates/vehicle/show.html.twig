{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
    <section id="contact" class="contact">
		<div class="container" data-aos="fade-up">

			<div class="section-header">
				<h2>Vehicle</h2>
				<p>Vehicle Show</p>
			</div>

            <div class="row gx-lg-0 gy-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ app.request.get('index') ?: parking_spot.id }}</td>
                            </tr>
                            <tr>
                                <th>License Plate</th>
                                <td>{{ vehicle.licensePlate }}</td>
                            </tr>
                            <tr>
                                <th>Brand</th>
                                <td>{{ vehicle.brand }}</td>
                            </tr>
                            <tr>
                                <th>Owner</th>
                                <td>{{ vehicle.owner }}</td>
                            </tr>
                             <tr>
                                <th>Slot No</th>
                                <td>{{ vehicle.parkingSpot }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
			</div>

            <!-- Form Group for Buttons -->
            <div class="form-group row">
                <div class="col-md-12 d-flex">
                    <div class="ms-auto">
                        <a href="{{ path('app_vehicle_index') }}" class="btn btn-secondary me-2">Back to List</a>
                        <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}" class="btn btn-primary me-2">Edit</a>
                        <div class="d-inline-block ">
                            {{ include('vehicle/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>    

    {# {{ include('vehicle/_delete_form.html.twig') }} #}
{% endblock %}
