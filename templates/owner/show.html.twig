{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block body %}
    <section id="contact" class="contact">
		<div class="container" data-aos="fade-up">

			<div class="section-header">
				<h2>Owner</h2>
				<p>Owner Shwo</p>
			</div>


            <div class="row gx-lg-0 gy-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ app.request.get('index') ?: parking_spot.id }}</td>
                            </tr>
                            <tr>
                                <th>Employee ID</th>
                                <td>{{ owner.EmployeeID }}</td>
                            </tr>
                            <tr>
                                <th>Owner Name</th>
                                <td>{{ owner.OwnerName }}</td>
                            </tr>
                            <tr>
                                <th>Contact Number</th>
                                <td>{{ owner.ContactNumber }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ owner.Email }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
			</div>


            <!-- Form Group for Buttons -->
            <div class="form-group row">
                <div class="col-md-12 d-flex">
                    <div class="ms-auto">
                        <a href="{{ path('app_owner_index') }}" class="btn btn-secondary me-2">Back to List</a>
                        <a href="{{ path('app_owner_edit', {'id': owner.id}) }}" class="btn btn-primary me-2">Edit</a>
                        <div class="d-inline-block ">
                            {{ include('owner/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
